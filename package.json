{
  "name": "ea-timeline",
  "version": "0.0.9",
  "description": "Reactive timeline/gantt chart using D3",
  "keywords": [
    "timeline",
    "d3",
    "gantt"
  ],
  "license": "BSD-3-Clause",
  "main": "build/ea-timeline.min.js",
  "jsnext:main": "index",
  "homepage": "https://github.com/sebastiankr/ea-timeline",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastiankr/ea-timeline.git"
  },
  "config": {
    "testfilter": "test/**/*-test.js"
  },
  "scripts": {
    "test": "tape test/**/*-test.js",
    "test:watch": "gaze \"npm test\" test/**/*-test.js build/**/*.js",
    "build": "rollup -c",
    "build:watch": "npm run build -- -w",
    "bundle": "rollup -c && uglifyjs build/ea-timeline.js -c -m -o build/ea-timeline.min.js",
    "prepublish": "npm run bundle",
    "postpublish": "git push && git push --tags",
    "serve": "browser-sync start -s -f *.html build/*.js",
    "start": "npm-run-all -p build:watch serve"
  },
  "dependencies": {
    "d3": "^4.2.2"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "browser-sync": "^2.15.0",
    "eslint": "^3.4.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "gaze-cli": "^0.2.0",
    "jsdom": "9.5.0",
    "jsdom-global": "2.1.0",
    "lodash": "^4.15.0",
    "moment": "^2.14.1",
    "npm-run-all": "^3.1.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.13",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^2.5.0",
    "tape": "^4.6.0",
    "uglifyjs": "^2.4.10"
  }
}
