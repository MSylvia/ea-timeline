{
  "name": "ea-timeline",
  "version": "0.0.6",
  "description": "Reactive timeline/gantt chart using D3",
  "keywords": [
    "timeline",
    "d3",
    "gantt"
  ],
  "license": "BSD-3-Clause",
  "main": "build/ea-timeline.js",
  "jsnext:main": "index",
  "homepage": "https://github.com/sebastiankr/ea-timeline",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastiankr/ea-timeline.git"
  },
  "config": {
    "testfilter": "test/**/*-test.js"
  },
  "scripts": {
    "test": "tape test/**/*-test.js",
    "test:watch": "gaze \"npm test\" test/**/*-test.js build/**/*.js",
    "build": "rollup -c -m",
    "build:watch": "rollup -c -m -w",
    "prepublish": "npm run test && uglifyjs build/ea-timeline.js -c -m -o build/ea-timeline.min.js",
    "postpublish": "VERSION=`node -e 'console.log(require(\"./package.json\").version)'`; git push && git push --tags",
    "start": "concurrent \"npm run build:watch\"  \"npm run test:watch\"  \"browser-sync start -s -w\""
  },
  "dependencies": {
    "d3": "^4.2.1"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.2.0",
    "browser-sync": "^2.14.0",
    "concurrently": "^2.2.0",
    "eslint": "^3.2.2",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "gaze-cli": "^0.2.0",
    "jsdom": "9.4.1",
    "jsdom-global": "2.0.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.34.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^2.5.0",
    "tape": "^4.6.0",
    "uglifyjs": "^2.4.10"
  }
}
